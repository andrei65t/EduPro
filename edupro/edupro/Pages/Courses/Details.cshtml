@page "{slug}"
@model Courses_DetailsModel
@{
    ViewData["Title"] = Model.CourseTitle ?? "Curs";
}

<div class="row">
    <div class="col-12">
        <h1 class="welcome-title">@Model.CourseTitle</h1>
        <p class="text-muted">Pagina cursului pentru <strong>@Model.CourseTitle</strong>.</p>
    </div>
</div>

<div class="row g-4 mt-3">
    <div class="col-md-6">
        <div class="app-card">
            <h4 class="mb-3">Lectii</h4>
            @if (Model.Lessons?.Count > 0)
            {
                <ul class="list-group list-group-flush">
                    @foreach(var l in Model.Lessons)
                    {
                        <li class="list-group-item" style="background:transparent;border:none;padding:.6rem 0">@l</li>
                    }
                </ul>
            }
            else
            {
                <div class="text-muted">Nu există lecții încă.</div>
            }
        </div>
    </div>

    <div class="col-md-6">
        <div class="app-card">
            <h4 class="mb-3">Notite</h4>
            @if (Model.Notes?.Count > 0)
            {
                <ul class="list-group list-group-flush">
                    @foreach(var n in Model.Notes)
                    {
                        <li class="list-group-item" style="background:transparent;border:none;padding:.6rem 0">@n</li>
                    }
                </ul>
            }
            else
            {
                <div class="text-muted">Nu există notițe încă.</div>
            }
        </div>
    </div>
</div>
