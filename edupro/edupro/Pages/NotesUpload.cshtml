@page
@model EduPro.Pages.NotesUploadModel
@{
    ViewData["Title"] = "Încarcă notițe (imagine)";
    ViewData["PageTitle"] = "Încarcă notițe – imagine sau PDF";
    ViewData["PageSubtitle"] = "Vom converti imaginea în text folosind OCR.";
}

<div class="row justify-content-center">
    <div class="col-xl-7 col-lg-8">
        <div class="app-card">
            <div class="app-card-header">
                <div>
                    <div class="app-card-title">Încarcă fișier</div>
                    <div class="app-card-subtitle">Acceptăm imagini (JPG, PNG) sau PDF cu notițe.</div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger m-3" role="alert">
                    <strong>Eroare:</strong> @Model.ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ExtractedText))
            {
                <div class="alert alert-success m-3" role="alert">
                    <h5 class="alert-heading">✓ Text extras cu succes!</h5>
                    
                    @if (!string.IsNullOrEmpty(Model.Summary))
                    {
                        <hr>
                        <div class="mt-2">
                            <strong>📋 Rezumat:</strong>
                            <div class="mt-2 p-3 bg-white rounded border border-success">
                                @Model.Summary
                            </div>
                        </div>
                    }
                    
                    <hr>
                    <div class="mt-2">
                        <strong>📝 Text complet extras:</strong>
                        <div class="mt-2 p-3 bg-light rounded" style="white-space: pre-wrap; max-height: 200px; overflow-y: auto;">@Model.ExtractedText</div>
                    </div>
                    <hr>
                    <div class="mt-3">
                        <a asp-page="/Explain" asp-route-text="@Model.ExtractedText" class="btn btn-primary">
                            <i class="bi bi-lightbulb"></i> Explică acest text
                        </a>
                        <a asp-page="/AskNotes" asp-route-notes="@Model.ExtractedText" class="btn btn-outline-primary ms-2">
                            <i class="bi bi-chat-dots"></i> Pune întrebări
                        </a>
                    </div>
                </div>
            }

            <form method="post" enctype="multipart/form-data" class="p-3">
                <div class="mb-3">
                    <label asp-for="NotesFile" class="form-label">Alege fișierul de notițe</label>
                    <input asp-for="NotesFile" class="form-control" type="file" accept="image/*" required />
                    <span class="form-text">Suportăm imagini JPG, PNG cu text scris de mână sau tipărit.</span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Titlul setului de notițe (opțional)</label>
                    <input asp-for="Title" class="form-control" placeholder="Ex: Analiză – capitolul 2" />
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-upload"></i> Încarcă și extrage text
                </button>
                <button type="reset" class="btn btn-outline-light ms-2">Resetează</button>
                <div class="mb-3">
                    <label class="form-label">Notițe extrase (preview)</label>
                    <textarea class="form-control" rows="6" disabled placeholder="După implementarea backend-ului, aici va apărea textul recunoscut."></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Încarcă (deocamdată fake)</button>
                <button type="button" class="btn btn-outline-light ms-2">Resetează</button>
                <p></p>
                
                <a asp-page="/NotesList" class="btn btn-outline-light ms-2">📘 Vezi notițele salvate</a>

                <button type="button" id="btnShowSummary" class="btn btn-outline-light ms-2">📄 Generează rezumat</button>

            </form>

            <div id="summaryBox" class="mt-3" style="display:none;">
                <label class="form-label">Rezumat automat</label>
                <textarea class="form-control" id="summaryText" rows="5" placeholder="Aici va apărea rezumatul generat automat (TODO backend)..."></textarea>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 🔹 Script simplu care afișează / ascunde caseta de rezumat
        document.getElementById("btnShowSummary").addEventListener("click", function () {
            const box = document.getElementById("summaryBox");
            if (box.style.display === "none") {
                box.style.display = "block";
                // Exemplu placeholder – vei înlocui ulterior cu textul generat de backend
                document.getElementById("summaryText").value = "Rezumatul se generează... (backend TODO)";
            } else {
                box.style.display = "none";
            }
        });
    </script>
}
