@page
@model EduPro.Pages.NotesUploadModel
@{
    ViewData["Title"] = "Încarcă notițe (imagine)";
    ViewData["PageTitle"] = "Încarcă notițe – imagine sau PDF";
    ViewData["PageSubtitle"] = "Vom converti imaginea în text folosind OCR.";
}

<div class="row justify-content-center">
    <div class="col-xl-7 col-lg-8">
        <div class="app-card">
            <div class="app-card-header">
                <div>
                    <div class="app-card-title">📤 Încarcă fișier</div>
                    <div class="app-card-subtitle">Acceptăm imagini (JPG, PNG) cu notițe.</div>
                </div>
            </div>

            <div class="app-card-body">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger mb-3" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Eroare:</strong> @Model.ErrorMessage
                    </div>
                }

                @if (Model.SavedSuccessfully)
                {
                    <div class="alert alert-success mb-3" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-check-circle-fill"></i> Notița a fost salvată cu succes!
                        </h5>
                        <hr style="border-color: rgba(34, 197, 94, 0.3);">
                        <div class="mt-2">
                            <a asp-page="/NotesList" class="btn btn-primary">
                                <i class="bi bi-list"></i> Vezi toate notițele
                            </a>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ExtractedText))
                {
                    <div class="mb-4">
                        @if (!string.IsNullOrEmpty(Model.Summary))
                        {
                            <div class="mb-3">
                                <label class="form-label" style="color: #e4e7eb;">
                                    <strong>📋 Rezumat</strong>
                                </label>
                                <div class="p-3 rounded border" style="background-color: #1e2530; color: #e4e7eb; border-color: #4cc9f0;">
                                    @Model.Summary
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label" style="color: #e4e7eb;">
                                <strong>📝 Text extras</strong>
                            </label>
                            <textarea class="form-control"
                                  rows="6"
                                  readonly
                                  style="background-color: #1e2530; color: #e4e7eb; border-color: #3d4756;">@Model.ExtractedText</textarea>
                        </div>

                        <div class="mb-3">
                            <a asp-page="/Explain" asp-route-text="@Model.ExtractedText" class="btn btn-primary">
                                <i class="bi bi-lightbulb"></i> Explică acest text
                            </a>
                            <a asp-page="/AskNotes" asp-route-notes="@Model.ExtractedText" class="btn btn-outline-primary ms-2">
                                <i class="bi bi-chat-dots"></i> Pune întrebări
                            </a>
                        </div>
                    </div>
                }

                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="NotesFile" class="form-label" style="color: #e4e7eb;">
                            <i class="bi bi-file-earmark-image"></i> Alege fișierul de notițe
                        </label>
                        <input asp-for="NotesFile"
                               class="form-control"
                               type="file"
                               accept="image/*"
                               required
                               style="background-color: #1e2530; color: #e4e7eb; border-color: #3d4756;" />
                        <div class="form-text" style="color: #9ca3af;">
                            <i class="bi bi-info-circle"></i>
                            Suportăm imagini JPG, PNG cu text scris de mână sau tipărit.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label" style="color: #e4e7eb;">
                            <i class="bi bi-tag"></i> Titlul notițelor (opțional)
                        </label>
                        <input asp-for="Title"
                               class="form-control"
                               placeholder="Ex: Analiză – Capitolul 2"
                               style="background-color: #1e2530; color: #e4e7eb; border-color: #3d4756;" />
                    </div>

                    <!-- SECȚIUNE: CATEGORII -->
                    <div class="mb-4">
                        <label class="form-label" style="color: #e4e7eb;">
                            <i class="bi bi-folder"></i> Categorie
                        </label>
                        <select asp-for="CategoryId"
                                class="form-select mb-2"
                                asp-items="Model.Categories"
                                style="background-color: #1e2530; color: #e4e7eb; border-color: #3d4756;">
                        </select>

                        <div class="text-center my-2">
                            <small style="color: #9ca3af;">SAU</small>
                        </div>

                        <label class="form-label" style="color: #e4e7eb;">
                            <i class="bi bi-plus-circle"></i> Creează categorie nouă
                        </label>
                        <input asp-for="NewCategoryName"
                               class="form-control"
                               placeholder="Numele categoriei noi..."
                               style="background-color: #1e2530; color: #e4e7eb; border-color: #3d4756;" />
                        <small class="form-text" style="color: #9ca3af;">
                            <i class="bi bi-lightbulb"></i>
                            Dacă categoria există deja, notița va fi adăugată la acea categorie.
                        </small>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-upload"></i> Încarcă și extrage text
                        </button>
                        <button type="reset" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-counterclockwise"></i> Resetează
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Card informativ -->
        <div class="app-card mt-3">
            <div class="app-card-body">
                <h6 class="mb-3" style="color: #4cc9f0;">
                    <i class="bi bi-info-circle-fill"></i> Sfaturi pentru rezultate optime
                </h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="me-2" style="color: #ffd60a;">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div>
                                <strong style="color: #e4e7eb;">Imagini clare</strong>
                                <div class="small" style="color: #adb5bd;">
                                    Folosește imagini cu rezoluție bună și text lizibil
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="me-2" style="color: #ffd60a;">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div>
                                <strong style="color: #e4e7eb;">Organizează cu categorii</strong>
                                <div class="small" style="color: #adb5bd;">
                                    Folosește categorii pentru a-ți organiza notițele pe domenii
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="me-2" style="color: #ffd60a;">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div>
                                <strong style="color: #e4e7eb;">Iluminare bună</strong>
                                <div class="small" style="color: #adb5bd;">
                                    Evită umbrele și reflexii pentru rezultate mai bune
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="me-2" style="color: #ffd60a;">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div>
                                <strong style="color: #e4e7eb;">Denumiri sugestive</strong>
                                <div class="small" style="color: #adb5bd;">
                                    Alege titluri descriptive pentru a găsi notițele mai ușor
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>