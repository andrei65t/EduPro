@page
@model EduPro.Pages.NotesListModel
@{
    ViewData["Title"] = "NotiÈ›ele mele";
    ViewData["PageTitle"] = "NotiÈ›ele mele salvate";
    ViewData["PageSubtitle"] = "Toate notiÈ›ele extrase din imagini";
}

<div class="row justify-content-center">
    <div class="col-xl-10">

        <!-- ========== MESAJE DE FEEDBACK ========== -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-@(Model.MessageType == "success" ? "success" : "danger") alert-dismissible fade show" role="alert">
                <i class="bi bi-@(Model.MessageType == "success" ? "check-circle" : "exclamation-circle")"></i>
                @Model.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- ========== CARD PRINCIPAL ========== -->
        <div class="app-card">

            <!-- Header cu titlu È™i butoane -->
            <div class="app-card-header">
                <div>
                    <div class="app-card-title">ðŸ“š NotiÈ›ele mele salvate</div>
                    <div class="app-card-subtitle">
                        @if (Model.SelectedCategoryId.HasValue)
                        {
                            <span>Filtru activ: <strong>@Model.CurrentFilter</strong> â€¢ </span>
                        }
                        <span>Total: @Model.Notes.Count @(Model.Notes.Count == 1 ? "notiÈ›Äƒ" : "notiÈ›e")</span>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <a asp-page="/Categories" class="btn btn-outline-primary">
                        <i class="bi bi-folder"></i> Gestionare categorii
                    </a>
                    <a asp-page="/NotesUpload" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> AdaugÄƒ notiÈ›e
                    </a>
                </div>
            </div>

            <!-- ========== FILTRU DUPÄ‚ CATEGORII ========== -->
            <div class="app-card-body border-bottom">
                <div class="d-flex align-items-center gap-2 flex-wrap">
                    <strong>FiltreazÄƒ:</strong>

                    <!-- Buton "Toate" -->
                    <a asp-page="/NotesList"
                       class="btn btn-sm @(Model.SelectedCategoryId == null ? "btn-primary" : "btn-outline-primary")">
                        <i class="bi bi-grid-3x3"></i> Toate
                    </a>

                    <!-- Butoane pentru fiecare categorie -->
                    @foreach (var category in Model.Categories)
                    {
                        <a asp-page="/NotesList"
                           asp-route-selectedCategoryId="@category.Id"
                           class="btn btn-sm @(Model.SelectedCategoryId == category.Id ? "btn-primary" : "btn-outline-primary")"
                           style="border-left: 3px solid @category.Color;">
                            <i class="bi bi-folder"></i> @category.Name
                        </a>
                    }

                    <!-- Buton pentru È™tergere filtru -->
                    @if (Model.SelectedCategoryId.HasValue)
                    {
                        <a asp-page="/NotesList" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-x-circle"></i> È˜terge filtru
                        </a>
                    }
                </div>
            </div>

            <!-- ========== LISTA DE NOTIÈšE ========== -->
            <div class="app-card-body p-3">

                <!-- Mesaj cÃ¢nd nu existÄƒ notiÈ›e -->
                @if (!Model.Notes.Any())
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        @if (Model.SelectedCategoryId.HasValue)
                        {
                            <text>Nu existÄƒ notiÈ›e Ã®n categoria selectatÄƒ.</text>
                        }
                        else
                        {
                            <text>Nu ai Ã®ncÄƒ nicio notiÈ›Äƒ salvatÄƒ. <a asp-page="/NotesUpload" class="alert-link">ÃŽncarcÄƒ prima imagine!</a></text>
                        }
                    </div>
                }
                else
                {
                    <!-- Lista cu notiÈ›e -->
                    <div class="list-group">
                        @foreach (var note in Model.Notes)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between align-items-start">
                                    <div class="flex-grow-1">

                                        <!-- Titlu È™i badge categorie -->
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            <h5 class="mb-0 text-bright" style="font-weight: 600;">
                                                <i class="bi bi-file-text"></i>
                                                @note.Title
                                            </h5>
                                            @if (note.Category != null)
                                            {
                                                <span class="badge" style="background-color: @note.Category.Color; color: white; font-weight: 600;">
                                                    <i class="bi bi-folder"></i> @note.Category.Name
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary badge-contrast" style="font-weight: 600;">FÄƒrÄƒ categorie</span>
                                            }
                                        </div>

                                        <!-- Rezumat (dacÄƒ existÄƒ) -->
                                        @if (!string.IsNullOrEmpty(note.Summary))
                                        {
                                            <div class="mb-2">
                                                <strong class="text-bright">ðŸ“‹ Rezumat:</strong>
                                                <p class="mb-1 text-soft">@note.Summary</p>
                                            </div>
                                        }

                                        <!-- Metadata (datÄƒ È™i fiÈ™ier) -->
                                        <div class="mb-2">
                                            <small class="text-soft">
                                                <i class="bi bi-calendar"></i>
                                                @note.CreatedAt.ToString("dd MMMM yyyy, HH:mm")
                                            </small>
                                            <small class="ms-3 text-soft">
                                                <i class="bi bi-file-earmark"></i>
                                                @note.OriginalFileName
                                            </small>
                                        </div>

                                        <!-- Butoane acÈ›iuni -->
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="/NoteDetails"
                                               asp-route-id="@note.Id"
                                               class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i> Vezi detalii
                                            </a>
                                            <button type="button"
                                                    class="btn btn-outline-secondary"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#changeCategoryModal-@note.Id">
                                                <i class="bi bi-folder"></i> SchimbÄƒ categoria
                                            </button>
                                            <a asp-page="/AskNotes"
                                               asp-route-notes="@note.ExtractedText"
                                               class="btn btn-outline-success">
                                                <i class="bi bi-chat-dots"></i> ÃŽntreabÄƒ
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <!-- ========== MODAL SCHIMBARE CATEGORIE ========== -->
                                <div class="modal fade" id="changeCategoryModal-@note.Id" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">

                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                                <h5 class="modal-title">SchimbÄƒ categoria pentru "@note.Title"</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>

                                            <!-- Modal Form -->
                                            <form method="post" asp-page-handler="ChangeCategory">
                                                <div class="modal-body">

                                                    <!-- Hidden fields -->
                                                    <input type="hidden" name="NoteId" value="@note.Id" />
                                                    <input type="hidden" name="SelectedCategoryId" value="@Model.SelectedCategoryId" />

                                                    <!-- Dropdown categorii existente -->
                                                    <div class="mb-3">
                                                        <label class="form-label">SelecteazÄƒ o categorie existentÄƒ:</label>
                                                        <select class="form-select" name="NewCategoryId">
                                                            <option value="">FÄƒrÄƒ categorie</option>
                                                            @foreach (var category in Model.Categories)
                                                            {
                                                                @if (note.CategoryId == category.Id)
                                                                {
                                                                    <option value="@category.Id" selected>@category.Name</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@category.Id">@category.Name</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>

                                                    <!-- Separator SAU -->
                                                    <div class="text-center mb-2">
                                                        <small class="text-muted">SAU</small>
                                                    </div>

                                                    <!-- Input pentru categorie nouÄƒ -->
                                                    <div class="mb-3">
                                                        <label class="form-label">CreeazÄƒ o categorie nouÄƒ:</label>
                                                        <input type="text"
                                                               class="form-control"
                                                               name="NewCategoryName"
                                                               placeholder="Numele categoriei noi...">
                                                        <small class="form-text text-muted">
                                                            DacÄƒ categoria existÄƒ deja, notiÈ›a va fi adÄƒugatÄƒ la acea categorie.
                                                        </small>
                                                    </div>
                                                </div>

                                                <!-- Modal Footer -->
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                        AnuleazÄƒ
                                                    </button>
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="bi bi-check-circle"></i> SalveazÄƒ
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!-- ========== END MODAL ========== -->

                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>