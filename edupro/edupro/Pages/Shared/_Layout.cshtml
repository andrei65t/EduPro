@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduPro</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="app-layout">
        <!-- Sidebar vertical -->
        <nav class="sidebar d-flex flex-column">
            <a class="sidebar-header d-flex align-items-center text-decoration-none" href="@Url.Page("/Account")">
                <div class="sidebar-avatar rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2">AP</div>
                <div class="sidebar-account">
                    <div class="sidebar-account-name text-white fw-bold">Andrei Popescu</div>
                    <div class="sidebar-account-role small text-white-50">Student</div>
                </div>
            </a>

            <div class="sidebar-section">
                <span class="sidebar-section-title">Workspace</span>
                <a class="sidebar-link" asp-page="/Index">
                    <span class="icon">🏠</span> Cursuri
                </a>
                <a class="sidebar-link" asp-page="/NotesUpload">
                    <span class="icon">📝</span> Încarcă notițe (imagine)
                </a>
                <a class="sidebar-link" asp-page="/NotesList">
                    <span class="icon">📘</span> Notițele mele
                </a>
                <a class="sidebar-link" asp-page="/TextQuiz">
                    <span class="icon">❓</span> Quiz din notițe text
                </a>
                <a class="sidebar-link" asp-page="/AskNotes">
                    <span class="icon">💬</span> Întrebări din notițe
                </a>
                <a class="sidebar-link" asp-page="/Pomodoro">
                    <span class="icon">⏱️</span> Pomodoro
                </a>
            </div>

            <div class="mt-auto sidebar-footer">
                <div class="sidebar-mini-info">
                    <span class="small text-muted">v0.1 – frontend only</span>
                </div>
            </div>
        </nav>

        <!-- Conținut principal -->
        <div class="content-area d-flex flex-column">
            <header class="topbar d-flex align-items-center justify-content-between">
                <div class="topbar-left">
                    <h1 class="topbar-title mb-0 brand-gradient">EduPro</h1>
                    <span class="topbar-subtitle">@ViewData["PageSubtitle"]</span>
                </div>
            </header>

            <main role="main" class="flex-grow-1 p-4 app-main">
                <div class="container-fluid px-0">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
